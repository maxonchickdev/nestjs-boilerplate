model Post {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @map("user_id")

  @@index([userId])
  @@index([createdAt])
  @@map("posts")
}
