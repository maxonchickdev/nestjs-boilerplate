{
	"name": "nestjs-boilerplate",
	"version": "0.0.1",
	"description": "Nestjs boilerplate",
	"keywords": [
		"package.json"
	],
	"author": "",
	"private": true,
	"license": "MIT",
	"repository": {
		"url": "https://github.com/maxonchickdev/nestjs-boilerplate"
	},
	"scripts": {
		"build": "nest build",
		"format:check": "prettier -c \"src/**/*.ts\" \"test/**/*.ts\"",
		"format:fix": "prettier -w \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,apps,libs,test}/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"prisma:generate": "prisma generate",
		"prisma:studio": "prisma studio",
		"prisma:migrate": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:push": "prisma db push",
		"prisma:reset": "prisma migrate reset",
		"prisma:seed": "ts-node prisma/seed.ts",
		"prisma:status": "prisma migrate status",
		"prisma:validate": "prisma validate",
    "test": "jest",
		"prepare": "husky",
		"docker-compose:up": "docker compose --progress tty -f docker-compose.yml up -d",
		"docker-compose:down": "docker compose --progress tty -f docker-compose.yml down -v",
    "test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs-modules/ioredis": "^2.0.2",
		"@nestjs/common": "^11.1.3",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.3",
		"@nestjs/mongoose": "^11.0.3",
		"@nestjs/platform-express": "^11.1.3",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/terminus": "^11.0.0",
		"@prisma/client": "^6.9.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"ioredis": "^5.6.1",
		"joi": "^17.13.3",
		"kafkajs": "^2.2.4",
		"mongoose": "^8.16.0",
		"nest-winston": "^1.10.2",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"uuid": "^11.1.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@faker-js/faker": "^9.8.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^11.1.3",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"express-basic-auth": "^1.2.1",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"jest": "^29.5.0",
		"prettier": "^3.6.2",
		"prisma": "^6.9.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3",
		"typescript-eslint": "^8.37.0"
	},
	"engines": {
		"node": "24.4.0",
		"npm": "11.4.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
